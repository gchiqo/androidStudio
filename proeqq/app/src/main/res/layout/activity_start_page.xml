<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="150dp"
        android:background="@mipmap/aqua_foreground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:ignore="HardcodedText">

        <CheckBox
            android:id="@+id/Gojūon"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:checked="true"
            android:text="Gojūon" />

        <CheckBox
            android:id="@+id/Dakuon"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Dakuon" />

        <CheckBox
            android:id="@+id/Handakuon"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Handakuon" />

        <CheckBox
            android:id="@+id/Yōon"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Yōon" />

        <Button
            android:id="@+id/hiragana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#9E0A3C91"
            android:text="hiragana" />

        <Button
            android:id="@+id/katagana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#9E0A3C91"
            android:text="katagana" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>